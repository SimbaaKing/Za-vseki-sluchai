@model IEnumerable<ManicureAndPedicureSalon.Data.Order>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align:center; color:black; text-decoration:underline">Поръчки</h1>

<p>
    <a style="color:black" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderedOn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderedOn)
            </td>
            <td>
                <a asp-action="Edit"  style="color:midnightblue" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" style="color:midnightblue" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" style="color:midnightblue" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
