@model IEnumerable<ManicureAndPedicureSalon.Data.Service>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align:center; color:black; text-decoration:underline" >Услуги</h1>

<p >
    <a asp-action="Create">Create New</a>
</p>
<table class="table" style="color:black">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employer)
            </th>
            <th>
              @Html.DisplayNameFor(model => model.Images)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateRegister)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employer.EmployerId)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.Images)" height="100"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateRegister)
            </td>
            <td>
                <a asp-action="Edit" style="color:midnightblue" asp-route-id="@item.ServiceId">Edit</a> |
                <a asp-action="Details" style="color:midnightblue" asp-route-id="@item.ServiceId">Details</a> |
                <a asp-action="Delete" style="color:midnightblue" asp-route-id="@item.ServiceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
